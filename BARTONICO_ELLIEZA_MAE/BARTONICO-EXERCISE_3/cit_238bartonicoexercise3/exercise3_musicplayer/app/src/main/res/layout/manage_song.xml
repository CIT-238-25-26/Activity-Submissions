<?xml version="1.0" encoding="utf-8"?>
<!-- We use a CardView to create a nice rounded "container" for the player -->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="28dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#FDF7FF">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Cute Title Styling -->
        <TextView
            android:id="@+id/songTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Select a Song"
            android:textAlignment="center"
            android:textColor="#6750A4"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Control Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/prevButton"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⏮"
                android:textSize="24sp"
                android:textColor="#6750A4" />

            <!-- Play and Pause are the "Main" buttons, so they get a pill shape -->
            <Button
                android:id="@+id/playButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:text="Play"
                android:backgroundTint="#6750A4"
                app:cornerRadius="20dp" />

            <Button
                android:id="@+id/pauseButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:text="Pause"
                android:backgroundTint="#EADDFF"
                android:textColor="#21005D"
                app:cornerRadius="20dp" />

            <Button
                android:id="@+id/nextButton"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⏭"
                android:textSize="24sp"
                android:textColor="#6750A4" />
        </LinearLayout>

        <!-- Stop Button styled as a simple text button to keep it clean -->
        <Button
            android:id="@+id/stopButton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Stop"
            android:textColor="#BA1A1A"
            android:textSize="12sp" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
