<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/songItemRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingStart="14dp"
    android:paddingEnd="14dp"
    android:background="@drawable/bg_song_item_ripple"
    android:gravity="center_vertical">

    <!-- Album Art with rounded corners -->
    <androidx.cardview.widget.CardView
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">

        <ImageView
            android:id="@+id/albumArtImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/album_placeholder"
            android:contentDescription="Album Art" />
    </androidx.cardview.widget.CardView>

    <!-- Song Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp">

        <TextView
            android:id="@+id/songNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Song Name"
            android:textColor="@color/text_primary"
            android:textSize="15sp"
            android:textStyle="normal"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Artist row with optional "Playing" chip -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="2dp">

            <TextView
                android:id="@+id/songArtistText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Artist"
                android:textColor="#99FFFFFF"
                android:textSize="13sp"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- "Playing" badge - only visible when this song is playing -->
            <TextView
                android:id="@+id/playingBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" â€¢ Playing"
                android:textColor="@color/purple_light"
                android:textSize="11sp"
                android:textStyle="bold"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

    <!-- Equalizer icon (shows when playing) -->
    <ImageView
        android:id="@+id/equalizerIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_equalizer"
        android:contentDescription="Now Playing"
        android:visibility="gone" />

    <!-- Play Icon (shows when NOT playing) -->
    <ImageView
        android:id="@+id/playIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_play"
        app:tint="@color/purple_light"
        android:contentDescription="Play"
        android:visibility="visible" />

</LinearLayout>


